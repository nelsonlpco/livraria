@model IEnumerable<Livraria.Web.ViewModels.AutorViewModel>

@{
    ViewBag.Title = "Autores";
}

<div class="row">
    <div class="col s12 m12">
        <div class="card animated fadeInRight">
            <div class="card-content">
                <span class="card-title">Autores</span>
                <div class="row">
                    <div class="col s12 m12 right-align">
                        @Html.ActionLink("Incluir Autor", "Create", "Autor", new object { }, new { @class = "btn" })
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 m12">
                        <table class="striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nome)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            <a class="btn-floating light-green" href="@Url.Action("Edit", "Autor", new { id = item.Id })"><i class="material-icons">mode_edit</i></a>
                                            <a class="btn-floating red" href="@Url.Action("Delete", "Autor", new { id = item.Id })"><i class="material-icons">delete</i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
