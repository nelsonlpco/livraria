@model Livraria.Web.ViewModel.LivroViewModel

@{
    ViewBag.Title = "Catalogar";
}

<div class="row">
    <div class="col s12 m12">
        <div class="card animated fadeInRight">
            <div class="card-content">
                <span class="card-title">Catalogar Livro</span>
                <div class="row">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="input-field col s12">
                                @Html.LabelFor(model => model.Titulo)
                                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "validate", @id = "titulo" } })
                                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                @Html.LabelFor(model => model.Descricao)
                                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "validade", @id = "descricao" } })
                                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                @Html.LabelFor(model => model.AnoPublicacao)
                                @Html.TextBoxFor(model => model.AnoPublicacao, new { @type = "number", @min = "1452", htmlAttributes = new { @id = "anoPublicacao" } })
                                @Html.ValidationMessageFor(model => model.AnoPublicacao, "", new { @class = "text-danger" })
                            </div>
                            <div class="input-field col s6">
                                @Html.LabelFor(model => model.Isbn)
                                @Html.TextBoxFor(model => model.Isbn, new { @type = "number", htmlAttributes = new { @id = "isbn" } })
                                @Html.ValidationMessageFor(model => model.Isbn, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6 m6">
                                @Html.DropDownListFor(model => model.AutorSelecionado, (SelectList)ViewBag.SelectListAutores)
                                @Html.LabelFor(model => model.AutorSelecionado)
                            </div>
                            <div class="input-field col s6 m6">
                                @Html.DropDownListFor(model => model.GeneroSelecionado, (SelectList)ViewBag.SelectListGeneros)
                                @Html.LabelFor(model => model.GeneroSelecionado)
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6 m6">
                                @Html.DropDownListFor(model => model.EditoraSelecionada, (SelectList)ViewBag.SelectListEditoras)
                                @Html.LabelFor(model => model.EditoraSelecionada)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12 right-align">
                                @Html.ActionLink("Cancelar", "Index", new object { }, new { @class = "btn red" })
                                <input type="submit" value="Salvar" class="btn btn-default" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
