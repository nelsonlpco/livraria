@model Livraria.Web.ViewModel.LivroViewModel

@{
    ViewBag.Title = "Exclusão";
}

<div class="row">
    <div class="col s12 m12">
        <div class="card animated fadeInRight">
            <div class="card-content">
                <span class="card-title"> @Html.DisplayFor(model => model.Titulo)</span>
                <div class="row">
                    <h4>Deseja realmente excluir o livro @Html.DisplayFor(model => model.Titulo)?</h4>
                </div>
                <div class="row">
                    <div class="col s12 m12 right-align">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                @Html.ActionLink("Cancelar", "Index", new object { }, new { @class = "btn red" })
                                <input type="submit" value="Excluir" class="btn btn-default green" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>