@model IEnumerable<LivrariaHBSIS.Web.ViewModel.LivroViewModel>

@{
    ViewBag.Title = "Livros";
}

<div class="row">
    <div class="col s12 m12">
        <div class="card animated fadeInRight">
            <div class="card-content">
                <span class="card-title">Acervo de Livros</span>
                <div class="row">
                    <div class="col s12 m12 right-align">
                        @Html.ActionLink("Incluir Livro", "Create", "Livro", new object { }, new { @class = "btn" })
                    </div>
                </div>

                <table class="striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Titulo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AnoPublicacao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Isbn)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Titulo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AnoPublicacao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Isbn)
                                </td>
                                <td>
                                    <a class="btn-floating light-green" href="@Url.Action("Edit", "Livro", new { id = item.Id })"><i class="material-icons">mode_edit</i></a>
                                    <a class="btn-floating light-blue" href="@Url.Action("Details", "Livro", new { id = item.Id })"><i class="material-icons">visibility</i></a>
                                    <a class="btn-floating red" href="@Url.Action("Delete", "Livro", new { id = item.Id })"><i class="material-icons">delete</i></a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>